pipeline {
    agent any
        stages {
            stage('First') {
                steps {
                    script {
                        env.VARIABLE="value"
                    }
                }
            }
 
 
             stage('Second') {
                steps {
                    script {
                        echo ${VARIABLE}
                    }
                }
            }

             
            stage('Third') {
                steps {
                   script {
                        echo ${VARIABLE}
                   }  
                }
            } 
        }
}
