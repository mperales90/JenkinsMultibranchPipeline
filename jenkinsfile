pipeline {
    agent any
        stages {
            stage('First') {
                steps {
                    script {
                        env.EXECUTE="True"
                    }
                }
            }
 
 
             stage('Second') {
                when {
                   ${EXECUTE} = "True"
                } 
                steps {
                   sh "echo 'Updating second stage'"
                }
            }
             
            stage('Third') {
                when {
                   ${EXECUTE} = "False"
                }
                steps {
                   sh "echo 'Updating third stage'"
                }
            } 
        }
}
